<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQs</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<header>
    <h1>FAQs</h1>
</header>
<main>
    <!-- Language Selection Dropdown -->
    <div>
        <label for="language">Select Language:</label>
        <select id="language">
            <option value="en">English</option>
            <option value="te">Telugu</option>
            <option value="kn">Kannada</option>
            <option value="ta">Tamil</option>
            <option value="hi">Hindi</option>
        </select>
        <button id="loadFaqs">Load FAQs</button>
    </div>

    <!-- FAQs List -->
    <div id="faqsList">
        <!-- FAQs will be dynamically loaded here -->
    </div>
</main>

<!-- JavaScript to Handle Language Selection and Load FAQs -->
<script>
    document.getElementById('loadFaqs').addEventListener('click', async () => {
        const language = document.getElementById('language').value;
        const response = await fetch(`/api/faqs?lang=${language}`);
        const faqs = await response.json();

        const faqsList = document.getElementById('faqsList');
        faqsList.innerHTML = ''; // Clear previous FAQs

        if (faqs.length > 0) {
            faqs.forEach(faq => {
                const faqItem = document.createElement('div');
                faqItem.classList.add('faq-item');
                faqItem.innerHTML = `
                        <h3>${faq.question}</h3>
                        <p>${faq.answer}</p>
                    `;
                faqsList.appendChild(faqItem);
            });
        } else {
            faqsList.innerHTML = '<p>No FAQs found for the selected language.</p>';
        }
    });
</script>
</body>
</html>
